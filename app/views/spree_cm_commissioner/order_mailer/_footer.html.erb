<div class="email-footer_inner">
  <div class="mb-24"><%= store.description%></div>
  <div class="mb-24 f-14"><%= store.address%></div>
  <h2 class="mb-24">Connect with us</h2>
  <table class="mb-24 social_icons">
  <tbody>
    <tr>
      <% if store.facebook? %>
        <td class="social_icon">
          <%= link_to store.facebook, target: :_blank do %>
            <%= image_tag "mailer/facebook.png", class: "mail-icon"%>
          <% end %>
        </td>
      <% end %>
      <% if store.instagram?%>
        <td class="social_icon">
          <%= link_to store.instagram, target: :_blank do %>
            <%= image_tag "mailer/instagram.png", class: "mail-icon"%>
          <% end %>
        </td>
      <% end %>
      <% if store.twitter?%>
        <td class="social_icon">
          <%= link_to store.twitter, target: :_blank do %>
            <%= image_tag "mailer/twitter.png", class: "mail-icon"%>
          <% end %>
        </td>
      <% end %>
    </tr>
  </tbody>
</table>

  <div class="email-footer_links">
    <% policy_page = store.cms_pages.find_by(slug: 'privacy-policy')%>
    <% terms_page = store.cms_pages.find_by(slug: 'terms-of-use')%>

    <% if terms_page.present? %>
      <%= link_to( terms_page.title, spree_storefront_resource_url(terms_page)) %>
      <span>|</span>
    <%end%>

    <% if policy_page.present? %>
      <%= link_to( policy_page.title, spree_storefront_resource_url(policy_page)) %>
    <%end%>
  </div>
</div>