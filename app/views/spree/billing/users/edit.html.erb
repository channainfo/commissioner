<%= render partial: 'spree/admin/merchant/shared/tabs', locals: { current: :account } %>

<%= render partial: 'spree/admin/users/user_page_actions' %>
<div data-hook="admin_user_edit_general_settings" class="card mb-3">
  <div class="card-header">
    <h5 class="card-title mb-0 h6">
      <%= Spree.t(:general_settings) %>
    </h5>
  </div>
  <div class="card-body">
    <div data-hook="admin_user_edit_form_header">
      <%= render partial: 'spree/admin/shared/error_messages', locals: { target: @user } %>
    </div>
    <div data-hook="admin_user_edit_form">
      <%= form_for [:billing, @user], as: :user, url: spree.billing_user_path(@user,vendor_id: params[:vendor_id]) do |f| %>
        <%= render partial: 'form', locals: { f: f } %>
        <div data-hook="admin_user_edit_form_button">
          <%= render partial: 'spree/admin/shared/edit_resource_links', locals: { collection_url: spree.billing_users_path } %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render 'spree/admin/users/lifetime_stats' %>
