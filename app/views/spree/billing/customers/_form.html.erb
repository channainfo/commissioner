<div data-hook="admin_user_form_fields" class="row">
  <div class="col-12 ">
    <%= f.field_container :email do %>
      <%= f.label :email, Spree.t(:email) %>
      <%= f.email_field :email, class: 'form-control' %>
      <%= f.error_message_on :email %>
    <% end %>
    <%= f.field_container :first_name do %>
      <%= f.label :first_name, Spree.t(:business_name) %>
      <%= f.text_field :first_name, class: 'form-control' %>
      <%= f.error_message_on :first_name %>
    <% end %>
    <%= f.field_container :last_name do %>
      <%= f.label :last_name, Spree.t(:owner_name) %>
      <%= f.text_field :last_name, class: 'form-control' %>
      <%= f.error_message_on :last_name %>
    <% end %>
    <%= f.field_container :gender do %>
      <%= f.label :gender, Spree.t(:gender) %>
      <%= f.select(:gender, Spree::User.genders.keys, { include_blank: true }, { class: 'select2-clear' }) %>
      <%= f.error_message_on :gender %>
    <% end %>
    <%= f.field_container :phone_number do %>
      <%= f.label :phone_number, I18n.t('activerecord.attributes.spree/order.phone_number') %>
      <%= f.telephone_field :phone_number, class: 'form-control' %>
      <%= f.error_message_on :phone_number %>
    <% end %>
    <%= f.hidden_field :vendor_id, value: current_vendor.id %>
    <%= f.field_container :taxon_id do %>
      <%= f.label :taxon_id, I18n.t('activerecord.attributes.spree/order.taxon') %>
      <%= f.collection_select(:taxon_id, Spree::Taxon.where('depth > ? ',0).order('parent_id ASC').uniq, :id, :pretty_name, { include_blank: Spree.t('match_choices.none') }, { class: 'select2' })%>
      <%= f.error_message_on :taxon_id %>
    <% end %>
    <%= f.field_container :quantity do %>
      <%= f.label :quantity, I18n.t('activerecord.attributes.spree/order.quantity') %>
      <%= f.number_field :quantity, class: 'form-control' %>
      <%= f.error_message_on :quantity %>
    <% end %>
  </div>
</div>
