<%= render 'spree/billing/shared/order_tabs', current: :invoice %>

<% content_for :extra_head do %>
  <%= stylesheet_link_tag 'spree_cm_commissioner/backend/invoice', media:'print,screen' %>
<% end %>

<% content_for :page_actions do %>
  <% unless @invoice.nil? %>
    <%= link_to  Spree.t(:print),'#', onclick: 'window.print(); return false;', class: 'btn btn-success mb-3' %>
  <% else %>
    <%= button_link_to Spree.t(:create_invoice), @invoice_path, method: :post, class: "btn-success" %>
  <% end %>
<% end %>

<% unless @invoice.nil? %>
  <%= render partial: 'spree/billing/shared/invoice', invoice: @invoice %>
<% else %>
  <small class="form-text text-muted">
    <%= raw I18n.t('invoice.empty_info') %>
  </small>
<% end %>
