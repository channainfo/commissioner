<ul data-hook="billing_settings_sidebar_menu" class="collapse nav nav-pills nav-stacked" id="sidebar-setting">
  <% if spree_current_user.permissions.exists?(entry: 'spree/billing/users') %>
    <%= configurations_sidebar_menu_item(Spree.t(:users), billing_users_url) %>
  <% end %>
  <% if spree_current_user.permissions.exists?(entry: 'spree/billing/roles') %>
    <%= configurations_sidebar_menu_item(I18n.t('spree.billing.roles'), billing_roles_url) %>
  <% end %>
  <% if spree_current_user.permissions.exists?(entry: 'spree/billing/vendors') %>
    <%= tab :vendor, selected: request.path.include?('/vendors'), url: edit_billing_vendor_url(@current_vendor.id), label: Spree.t('billing.vendor') %>
  <% end %>
</ul>
