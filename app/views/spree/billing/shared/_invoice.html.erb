              <li><%= @note %></li>
            </div>
            <div class="ml-auto  qrcode-container">
              <%= @qrcode %>
              <div class="list-unstyled text-center">
                <li><span><%= @account_name %></span></li>
                <li><span><%= @account_number %></span></li>
              </div>
            </div>
      </div>

      <div class="footer-content">
        <div class="d-flex justify-content-between mt-4">
