<div data-hook="admin_affiliate_banners_form">
    <%= hidden_field_tag :q, params[:q] %>

    <div class="form-group">
      <%= f.label :name, "Name" %>
      <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
    </div>

    <div class="form-group">
      <%= f.label :url, "URL" %>
      <%= f.text_field :url, class: "form-control", placeholder: "URL" %>
    </div>

    <div class="form-group">
      <%= f.label :start_date, "Start Date" %>
      <%= f.date_field :start_date, class: "form-control", placeholder: "Start Date" %>
    </div>

    <div class="form-group">
      <%= f.label :end_date, "End Date" %>
      <%= f.date_field :end_date, class: "form-control", placeholder: "End Date" %>
    </div>

    <div class="form-group">
      <%= f.label :banner_text, "Banner Text" %>
      <%= f.text_area :banner_text, class: "form-control", placeholder: "Banner Text" %>
    </div>

    <div class="form-group">
      <%= f.label :description, "Description" %>
      <%= f.text_area :description, class: "form-control", placeholder: "Description" %>
    </div>

    <% if @affiliate_banner.banner? %>
      <div class="form-group" data-hook="preview-image">
        <%= image_tag(@affiliate_banner.banner_url(:thumb), class: "rounded border mb-4") %>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :banner, "Banner" %>
      <%= f.file_field :banner, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit "Create", class: "btn btn-primary" %>
      <%= link_to "Cancel", admin_affiliate_banners_path, class: "btn btn-default" %>
    </div>
</div>
