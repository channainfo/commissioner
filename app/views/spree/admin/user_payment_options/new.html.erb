<% content_for :page_title do %>
  <%= link_to Spree.t(:payment_methods), spree.admin_payment_methods_path %> /
  <%= @payment_method.name %>
<% end %>

<%= render partial: 'spree/admin/shared/payment_method_tab', locals: { current: :payable_users } %>

<div class="card">
  <div class="card-body">
    <%= form_with model: @object, url: { action: 'create' } do |f| %>
      <%= f.hidden_field :payment_method_id, value: @payment_method.id %>
      <div  class="form-group" data-hook="new_user">
          <%= f.field_container :user do %>
            <%= f.label :user_id, Spree.t(:users) %>
            <%= f.select :user_id,
              options_from_collection_for_select(@available_users, :id, :email),
                { include_hidden: true },
                class: 'select2 form-control' %>
            <%= f.error_message_on :user_id %>
          <% end %>
        </div>
      <fieldset data-hook="new_user_payment_options">
        <%= render partial: 'spree/admin/shared/new_resource_links' %>
      </fieldset>
    <% end %>
  </div>
</div>