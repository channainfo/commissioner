<%= render partial: 'spree/admin/shared/customer_notification_tabs', locals: { current: :images , object: @customer_notification } %>

<% content_for :page_actions do %>
  <%= yield :page_actions %>
  <%= button_link_to(Spree.t(:new_image), new_admin_customer_notification_feature_image_url(@customer_notification), { class: "btn-success", icon: 'add.svg', id: 'new_image_link' }) if can? :create, Spree::Image %>
<% end %>

<% unless @objects.empty? %>
  <div class="table-responsive">
    <table class="table sortable" data-hook="images_table" data-sortable-link="<%= update_positions_admin_customer_notification_feature_images_url(@customer_notification) %>">
      <thead>
        <tr data-hook="images_header">
          <th>
            <%= Spree.t(:id) %>
          </th>
          <th colspan="2">
            <%= Spree.t(:thumbnail) %>
          </th>
          <th>
            <%= Spree.t(:alt_text) %>
          </th>
          <th class="actions"></th>
        </tr>
      </thead>

      <tbody id="sortVert">
        <% (@objects).each do |image| %>
          <tr id="<%= spree_dom_id image %>" data-hook="images_row">
            <td><%= image.id %></td>
            <td class="move-handle text-center">
              <% if can? :edit, image %>
                <%= svg_icon name: "sort.svg", width: '18', height: '18' %>
              <% end %>
            </td>
            <td class="image">
              <div class="admin-product-image-container small-img">
                <%= link_to image_tag(main_app.url_for(image.url(:mini))), main_app.rails_blob_url(image.attachment) %>
              </div>
            </td>
            <td><%= image.alt %></td>
            <td class="actions">
              <span class="d-flex justify-content-end">
                <%= link_to_with_icon('edit.svg', Spree.t(:edit), edit_admin_customer_notification_feature_image_url(@customer_notification, image), class: 'btn btn-primary btn-sm', no_text: true, data: { action: 'edit' }) if can? :edit, image %>
                <%= link_to_delete(image, { url: admin_customer_notification_feature_image_url(@customer_notification, image), no_text: true }) if can? :destroy, image %>
              </span>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
<small class="form-text text-muted">
  <%= raw I18n.t('photo.empty_info') %>
</small>
<% end %>