<div data-hook="admin_user_user_identity_provider_form_fields" class= "row">
  <div class="col-6">
    <%= f.field_container :identity_type, class: ['form-group'] do %>
      <%= f.label :identity_type, Spree.t(:attribute_type) %> <span class="required">*</span>
      <%= f.select :identity_type, SpreeCmCommissioner::UserIdentityProvider.identity_types.keys, {}, :class => "fullwidth select2" %>
      <%= f.error_message_on :identity_type %>
    <% end %>
  </div>
   <div class="col-6">
    <%= f.field_container :sub do %>
      <%= f.label :sub, Spree.t(:sub) %> <span class="required">*</span>
      <%= f.text_field :sub, class: 'form-control' %>
      <%= f.error_message_on :sub %>
    <% end %>
  </div>
  <div class="col-6">
    <%= f.field_container :email do %>
      <%= f.label :email, Spree.t(:email) %>
      <%= f.text_field :email, class: 'form-control' %>
      <%= f.error_message_on :email %>
    <% end %>
  </div>
</div>