<div data-hook="admin_customer_notification_form_fields">
  <div class="row">
    <div class="col-lg-12 col-sm-12">
      <div class="form-group">
        <%= f.label :title, class: "text-md" %> <span class="required text-danger">*</span>
        <%= f.text_field :title, required: true, class: 'form-control border-radius-5' %>
        <%= f.error_message_on :title %>
      </div>
    </div>

    <div class="col-lg-12 col-sm-12">
      <%= f.label :excerpt, class: "text-md" %> <span class="required text-danger">*</span>
      <%= f.text_field :excerpt, required: true, class: 'form-control border-radius-5' %>
      <%= f.error_message_on :excerpt %>
    </div>

    <div class="col-lg-12 col-sm-12 mt-3">
      <%= f.label :body, Spree.t(:body) %> <span class="required text-danger">*</span>
      <%= f.text_area :body, rows: "20", class: 'form-control spree-rte border-radius-5' %>
      <%= f.error_message_on :body %>
    </div>

    <div class="col-lg-12 col-sm-12">
      <%= f.field_container :notification_type, class: ['form-group mt-3'] do %>
        <%= f.label :notification_type, Spree.t(:notification_type) %> <span class="required text-danger">*</span>
        <%= f.select(:notification_type, SpreeCmCommissioner::CustomerNotification.notification_types.keys, {}, { class: 'select2-clear' }) %>
        <%= f.error_message_on :notification_type %>
      <% end %>
    </div>

    <div class="col-lg-12 col-sm-12">
      <div class="form-group">
        <%= f.label :payload, class: "text-md" %>
        <%= f.text_area :payload, class: 'form-control' %>
        <%= f.error_message_on :payload %>
      </div>
    </div>

    <div class="col-lg-12 col-sm-12">
      <div class="form-group">
        <%= f.label :url, class: "text-md" %> <span class="required text-danger">*</span>
        <%= f.text_field :url, required: true, class: 'form-control border-radius-5' %>
        <%= f.error_message_on :url %>
        <small class="form-text text-muted">
          Open app: bookmeplus://www.bookme.plus/t/events/preah-vihear-temple-run<br>
          Open web view: https://bookmebus.com/en/about_us<br>
          Open browser: https://t.me/runwithsaiofficial?target=_blank<br>
        </small>
      </div>
    </div>

    <div class="col-lg-12 col-sm-12">
      <div class="form-group">
        <%= f.label :action_label, class: "text-md" %>
        <%= f.text_field :action_label, placeholder: 'default: "Book Now"', class: 'form-control border-radius-5' %>
        <%= f.error_message_on :action_label %>
      </div>
    </div>

    <div class="col-lg-12 col-sm-12">
      <div class="form-group">
        <%= f.label :started_at, class: "text-md" %>
        <div class="input-group datePickerTo" data-wrap="true" data-alt-input="true" data-min-date="<%= @object.started_at %>" data-enable-time="true">
          <%= f.text_field :started_at, value: @object.started_at, placeholder: Spree.t(:select_a_date), class: 'form-control shadow-none', 'data-input': '' %>
          <%= render partial: 'spree/admin/shared/cal_close' %>
        </div>
      </div>
    </div>

    <div class="col-lg-12 col-sm-12">
      <div class="form-group">
        <%= f.label :taxon_ids, Spree.t(:select_taxons) %>
        <%= f.collection_select :taxon_ids, Spree::Taxon.where(kind: 2), :id, :pretty_name, { include_hidden: true }, { multiple: true, class: "select2 form-control", data: { minimum_input_length: 3 } } %>
        <%= f.error_message_on :taxon_ids %>
      </div>
    </div>

    <div class="col-lg-12 col-sm-12">
      <div class="form-group">
      <%= f.label :tenant_id, raw(Spree.t(:tenant) + ' (optional)') %>
      <%= f.collection_select :tenant_id, SpreeCmCommissioner::Tenant.all, :id, :name, { prompt: Spree.t(:select_tenant) }, { class: 'form-control select2' } %>
      <%= f.error_message_on :tenant_id %>
      </div>
    </div>
  </div>
</div>
