<div data-hook="admin_customer_notification_form_fields">
  <div class="row">
    <div class="col-lg-12 col-sm-12">
      <div class="form-group">
        <%= f.label :title, class: "text-md" %>
        <%= f.text_field :title, class: 'form-control border-radius-5' %>
        <%= f.error_message_on :title %>
      </div>
    </div>

   <div class="col-lg-12 col-sm-12">
        <%= f.label :excerpt, class: "text-md" %>
        <%= f.text_field :excerpt, class: 'form-control border-radius-5' %>
        <%= f.error_message_on :excerpt %>
      </div>

    <div class="col-lg-12 col-sm-12">
          <%= f.label :body, Spree.t(:body) %>
          <%= f.text_area :body,  { rows: "20", class: 'form-control spree-rte border-radius-5' } %>
          <%= f.error_message_on :body %>
    </div>

    <div class="col-lg-12 col-sm-12">
      <%= f.field_container :notification_type, class: ['form-group mt-3'] do %>
        <%= f.label :notification_type, Spree.t(:notification_type) %> <span class="required text-danger">*</span>
        <%= f.select(:notification_type, SpreeCmCommissioner::CustomerNotification.notification_types.keys, {}, { class: 'select2-clear' }) %>
        <%= f.error_message_on :notification_type %>
      <% end %>
    </div>

    <div class="col-lg-12 col-sm-12">
      <div class="form-group">
        <%= f.label :payload, class: "text-md" %>
        <%= f.text_area :payload, class: 'form-control' %>
        <%= f.error_message_on :payload %>
      </div>
    </div>

    <div class="col-lg-12 col-sm-12">
      <div class="form-group">
        <%= f.label :url, class: "text-md" %>
        <%= f.text_field :url, class: 'form-control border-radius-5' %>
        <%= f.error_message_on :url %>
      </div>
    </div>

    <div class="col-lg-12 col-sm-12">
      <div class="form-group">
        <%= f.label :started_at, class: "text-md" %>
        <div class="input-group datePickerTo"
              data-wrap="true"
              data-alt-input="true"
              data-min-date="<%= @object.started_at %>"
              data-enable-time="true"
        >
          <%= f.text_field :started_at,
                            value: @object.started_at,
                            placeholder: Spree.t(:select_a_date),
                            class: 'form-control shadow-none ',
                            'data-input':'' %>
          <%= render partial: 'spree/admin/shared/cal_close' %>
        </div>
      </div>
    </div>

    <div class="col-lg-12 col-sm-12">
      <div class="form-group">
        <%= f.label :send_all %>
        <%= f.check_box :send_all%>
      </div>
    </div>
  </div>
</div>

