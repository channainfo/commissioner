<div data-hook="admin_user_device_token_form_fields" class= "row">
  <div class="col-6">
     <%= f.field_container :client_name do %>
      <%= f.label :client_name, Spree.t(:client_name) %>
      <%= f.text_field :client_name, class: 'form-control' %>
      <%= f.error_message_on :client_name %>
    <% end %>
  </div>
  <div class="col-6">
     <%= f.field_container :client_version do %>
      <%= f.label :client_version, Spree.t(:client_version) %>
      <%= f.text_field :client_version, class: 'form-control' %>
      <%= f.error_message_on :client_version %>
    <% end %>
  </div>
   <div class="col-12">
     <%= f.field_container :meta do %>
      <%= f.label :meta, Spree.t(:meta) %>
      <%= f.text_field :meta, class: 'form-control' %>
      <%= f.error_message_on :meta %>
    <% end %>
  </div>
   <div class="col-12">
     <%= f.field_container :registration_token do %>
      <%= f.label :registration_token, Spree.t(:registration_token) %>
      <%= f.text_field :registration_token, class: 'form-control' %>
      <%= f.error_message_on :registration_token %>
    <% end %>
  </div>
</div>