<div class="table-responsive border rounded bg-white">
  <div id="variant_pricing_rates-table-wrapper">
    <table class="table sortable table-bordered table-hover" data-sortable-link="<%= update_positions_admin_product_variants_path(@product) %>">
      <thead class="text-muted">
        <tr class="text-center">
          <th></th>
          <th><%= Spree.t(:id) %></th>
          <th><%= Spree.t(:rules) %></th>
          <th><%= Spree.t(:match_policy) %></th>
          <th><%= Spree.t(:effective_from) %></th>
          <th><%= Spree.t(:effective_to) %></th>
          <% if false  %><th><%= Spree.t(:variant) %></th><% end %>
          <th><%= Spree.t(:rate_price) %></th>
          <th class="actions"></th>
        </tr>
      </thead>
      <tbody id="sortVert">
      <% @pricing_rates.each do |pricing_rate| %>
        <tr id="<%= spree_dom_id pricing_rate %>" data-hook="pricing_rates_row">
          <td class="move-handle inline">
            <% if can? :edit, pricing_rate %>
              <%= svg_icon name: "grip-vertical.svg", width: '18', height: '18' %>
            <% end %>
          </td>
          <td class="text-center"><%= pricing_rate.id || 0 %></td>
          <td>
            <ul class="m-0">
              <% pricing_rate.pricing_rules.each do |rule| %>
                <li class="py-1 px-2">
                  <%= rule.description %>
                </li>
              <% end %>
            </ul>
          </td>
          <td class="text-center">
            <p class="badge badge-secondary border bg-light m-0 text-dark" data-toggle="tooltip" data-placement="top" title='<%= Spree.t("pricing_rate.match_#{pricing_rate.match_policy}") %>'>
              <span class="align-middle"><%= pricing_rate.match_policy %></span>
              <%= svg_icon name: "info-circle.svg", width: '14', height: '14' %>
            </p>
          </td>
          <td><%= pretty_date(pricing_rate.effective_from) if pricing_rate.effective_from.present? %></td>
          <td><%= pretty_date(pricing_rate.effective_to) if pricing_rate.effective_to.present? %></td>
          <% if false  %><th><%= pricing_rate.rateable.options_text %></th><% end %>
          <td class="text-center"><%= pricing_rate.price_in(current_currency)&.display_amount %></td>
          <td class="actions">
            <span class="d-flex justify-content-end">
              <%= link_to_edit(pricing_rate, no_text: true) if pricing_rate.persisted? && can?(:edit, pricing_rate) %>
              <%= link_to_delete(pricing_rate, no_text: true) if pricing_rate.persisted? && can?(:destroy, pricing_rate) %>
            </span>
          </td>
        </tr>
        <% end %>
        <% unless @pricing_rates.any? %>
          <tr>
            <td colspan="5"><%= Spree.t(:none) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
