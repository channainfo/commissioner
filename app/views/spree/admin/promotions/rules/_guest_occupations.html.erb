<div class="card-body">
  <div class="form-group">
    <%= label_tag "#{param_prefix}_guest_occupation_ids_string", Spree.t('guest_occupation_rule.choose_guest_occupation') %>
    <%= select "#{param_prefix}", 'guest_occupation_ids_string',
        options_from_collection_for_select(Spree::Taxon.occupation, :id, :name, promotion_rule.guest_occupations.pluck(:id)),
        { }, multiple: true, class: 'select2 form-control'
    %>
  </div>
  <div class="form-group mb-0">
    <%= label_tag Spree.t('guest_occupation_rule.label') %>
    <%= select_tag("#{param_prefix}[preferred_match_policy]",
        options_for_select(SpreeCmCommissioner::Promotion::Rules::GuestOccupations::MATCH_POLICIES.map{|s| [Spree.t("guest_occupation_rule.match_#{s}"),s] },
        promotion_rule.preferred_match_policy), {class: 'form-control'})
    %>
  </div>
</div>

