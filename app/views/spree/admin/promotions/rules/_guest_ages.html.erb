<div class="card-body">
  <div class="form-group">
    <%= label_tag "#{param_prefix}_guest_ages", Spree.t('guest_age_rule.choose_guest_ages') %>
    <%= select_tag("#{param_prefix}[preferred_guest_ages][]",
        options_for_select((1..100).to_a, promotion_rule.preferred_guest_ages),
        { multiple: true, class: 'select2 form-control' }
    ) %>
  </div>
  <div class="form-group mb-0">
    <%= label_tag Spree.t('guest_age_rule.label') %>
    <%= select_tag("#{param_prefix}[preferred_match_policy]",
        options_for_select(SpreeCmCommissioner::Promotion::Rules::GuestAges::MATCH_POLICIES.map { |s| [Spree.t("guest_age_rule.match_#{s}"), s] },
        promotion_rule.preferred_match_policy), {class: 'form-control'}
    ) %>
  </div>
</div>