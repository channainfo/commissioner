<div class="card-body">
  <div class="form-group">
    <%= label_tag "#{param_prefix}_vendor_ids_string", Spree.t('vendors_rule.choose_vendors') %>
    <%= select "#{param_prefix}", 'vendor_ids_string', options_from_collection_for_select(Spree::Vendor.active, :id, :name, promotion_rule.vendors.pluck(:id)), { }, multiple: true, class: 'select2 form-control' %>
  </div>
  <div class="form-group mb-0">
    <%= label_tag Spree.t('vendors_rule.label') %>
    <%= select_tag("#{param_prefix}[preferred_match_policy]", options_for_select(SpreeCmCommissioner::Promotion::Rules::Vendors::MATCH_POLICIES.map{|s| [Spree.t("vendors_rule.match_#{s}"),s] }, promotion_rule.preferred_match_policy), {class: 'form-control'}) %>
  </div>
</div>
