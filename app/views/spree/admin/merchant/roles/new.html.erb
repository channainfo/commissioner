<% content_for :page_title do %>
  <%= link_to Spree.t(:roles), spree.admin_merchant_roles_url %> /
  <%= Spree.t(:new_role) %>
<% end %>

<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @role } %>

<%= form_for [:admin, :merchant, @role] do |f| %>
  <fieldset>
    <%= render partial: 'form', locals: { f: f } %>
    <%= render partial: 'spree/admin/shared/new_resource_links', locals: { collection_url: spree.admin_merchant_roles_path } %>
  </fieldset>
<% end %>