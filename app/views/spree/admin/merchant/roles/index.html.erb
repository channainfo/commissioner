<% content_for :page_title do %>
  <%= Spree.t(:roles) %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:new_role), new_admin_merchant_role_path, class: "btn-success", icon: 'add.svg', id: 'admin_merchant_new_role_link' %>
<% end if can? :create, Spree::Role %>

<% if @roles.any? %>
  <div class="table-responsive border rounded bg-white">
    <table class="table">
      <thead class="text-muted">
        <tr data-hook="admin_merchant_roles_index_headers">
          <th><%= Spree.t(:role) %></th>
          <th><%= Spree.t(:role_id) %></th>
          <th class="actions"></th>
        </tr>
      </thead>
      <tbody>
        <% @roles.each do |role| %>
          <tr id="<%= spree_dom_id role %>" data-hook="admin_merchant_roles_index_rows">
            <td><%= role.name %></td>
            <td><%= role.id %></td>
            <td class="actions">
              <span class="d-flex justify-content-end">
                <% unless role.id == 1 %>
                  <%= link_to_edit role, url: edit_admin_merchant_role_path(role), no_text: true if can?(:edit, :merchant, role) %>
                  <%= link_to_delete role, url: admin_merchant_role_path(role), no_text: true if can?(:delete, role) %>
                <% end %>
              </span>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="alert alert-warning">
    <%= Spree.t(:no_resource_found, resource: plural_resource_name(Spree::Role)) %>,
    <%= link_to(Spree.t(:add_one), new_object_url) if can? :create, Spree::Role %>!
  </div>
<% end %>
