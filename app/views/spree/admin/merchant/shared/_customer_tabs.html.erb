<% content_for :page_title do %>
  <%= page_header_back_button spree.admin_merchant_customers_path %>
  <%= @customer.email %>
<% end %>

<% content_for :page_tabs do %>
  <li class="nav-item">
    <%= link_to_with_icon 'person.svg',
      Spree.t(:customer),
      spree.edit_admin_merchant_customer_path(@customer),
      class: "nav-link #{'active' if current == :account}" %>
  </li>
<% end %>

<% content_for :page_tabs do %>
  <li class="nav-item">
    <%= link_to_with_icon 'tag.svg',
      Spree.t(:subscriptions),
      spree.admin_merchant_customer_subscriptions_path(@customer),
      class: "nav-link #{'active' if current == :subscriptions}" %>
  </li>
<% end %>
