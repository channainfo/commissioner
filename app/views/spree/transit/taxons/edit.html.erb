
<% content_for :page_title do %>
  <%= link_to Spree.t(:taxonomies), spree.transit_taxonomies_url %> /

  <%= link_to @taxonomy.root.name, spree.edit_transit_taxonomy_url(@taxonomy) %>
  <% unless @taxon.root? %>
    / <%= @taxon.name %>
  <% end %>
<% end %>

<%# Because otherwise the form would attempt to use to_param of @taxon %>
<% form_url = transit_taxonomy_taxon_path(@taxonomy.id, @taxon.id) %>

<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @taxon } %>

<%= form_with model: @object, url: { action: 'update'}, id: "checkbox-form" do |f| %>
  <%= render 'form', f: f %>

  <div class="form-actions" data-hook="buttons">
    <%= button Spree.t('actions.update'), 'save.svg' %>
    <span class="or"><%= Spree.t(:or) %></span>
    <%= button_link_to Spree.t('actions.cancel'), edit_transit_taxonomy_url(@taxonomy), icon: "cancel.svg" %>
  </div>
<% end %>
