<% content_for :page_title do %>
  <%= page_header_back_button spree.transit_routes_path %>
  <%= @product.name %>
<% end %>

<% content_for(:page_tabs) do %>
  <%= content_tag :li, class: 'nav-item' do %>
    <%= link_to_with_icon 'edit.svg',
      Spree.t(:route),
      edit_transit_route_path(@product),
      class: "nav-link #{'active' if current == :route}" %>
  <% end %>
  <%= content_tag :li, class: 'nav-item' do %>
    <%= link_to_with_icon 'edit.svg',
      Spree.t(:trip),
      (@product.trip ? edit_transit_route_trip_path(@product, @product.trip) : new_transit_route_trip_path(@product)),
      class: "nav-link #{'active' if current == :trip}" %>
  <% end %>
  <%= content_tag :li, class: 'nav-item' do %>
    <%= link_to_with_icon 'edit.svg',
      Spree.t(:trip_stops),
      (@product.trip && transit_route_trip_trip_stops_path(@product, @product.trip)),
      class: "nav-link #{'active' if current == :trip_stop} #{'disabled' if !@product.trip } "%>
  <% end %>
<% end %>
