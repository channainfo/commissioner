<% content_for :page_title do %>
  <%= Spree.t(:Amenities) %>
<% end %>

<% content_for :page_actions do %>
  <span id="new_ot_link">
    <%= button_link_to Spree.t(:edit_icons), transit_vectors_amenity_values_url, { icon: 'spree-icon.svg', id: 'admin-option-values-icons-index' } %>
  </span>
<% end if can?(:create, Spree::OptionType) %>

<div id="new_option_type"></div>

<% if @objects.any? %>
<div class="table-responsive border rounded bg-white">
  <table class="table sortable" id="listing_option_types">
    <thead class="text-muted">
      <tr data-hook="option_header">
        <th class="no-border handel-head"></th>
        <th><%= Spree.t(:name) %></th>
        <th><%= Spree.t(:presentation) %></th>
        <th><%= Spree.t(:filterable) %></th>
        <th class="actions"></th>
      </tr>
    </thead>
    <tbody id="sortVert">
      <% @objects.each do |option_type| %>
        <tr class="spree_option_type <%= cycle('odd', 'even') %>" id="<%= spree_dom_id option_type %>" data-hook="option_row">
          <td class="move-handle text-center">
            <%= svg_icon name: "grip-vertical.svg", width: '18', height: '18' %>
          </td>
          <td><%= option_type.name %></td>
          <td class="presentation"><%= option_type.presentation %></td>
          <td><%= active_badge(option_type.filterable) %></td>
          <td class="actions">
            <span class="d-flex justify-content-end">
              <%= link_to_edit option_type, url: edit_transit_amenity_path(option_type), no_text: true, class: 'edit' if can?(:edit, option_type) %>
              <%= link_to_delete(option_type, no_text: true) if can?(:delete, option_type) %>
            </span>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<% else %>
  <div class="text-center no-objects-found m-5">
    <%= Spree.t(:no_resource_found, resource: plural_resource_name(Spree::OptionType)) %>,
    <%= link_to Spree.t(:add_one), new_transit_amenity_url if can?(:create, Spree::OptionType) %>!
  </div>
<% end %>