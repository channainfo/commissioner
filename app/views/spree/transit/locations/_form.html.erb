<div data-hook="admin_user_form_fields" class="row">
  <div class="col-12 ">
    <%= f.field_container :name do %>
      <%= f.label :name, Spree.t(:name) %>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.error_message_on :name %>
    <% end %>
    <%= f.field_container :abbr do %>
      <%= f.label :abbreviation, Spree.t(:abbreviation) %>
      <%= f.text_field :abbr, class: 'form-control', required: true %>
      <%= f.error_message_on :abbr %>
    <% end %>
    <%= f.field_container :country_id do %>
      <%= f.label :country_id %>
      <%= f.collection_select(:country_id, Spree::Country.all, :id, :name, {prompt: "Select a country"}, { class: 'form-control select2'} )%>
      <%= f.error_message_on :country_id %>
    <% end %>
  </div>
</div>
