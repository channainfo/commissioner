<% content_for :table_filter do %>
  <div data-hook="transit_routes_index_search">
    <%= search_form_for [:transit, @search], url: spree.transit_routes_path do |f| %>
      <div class="row">
        <div class="col-12 col-lg-6">
          <div class="form-group">
            <%= f.label :name_cont, I18n.t('spree.name') %>
            <%= f.text_field :name_cont, placeholder: I18n.t('spree.name'), class: "form-control js-quick-search-target js-filterable" %>
          </div>
        </div>
        <div class="col-12 col-lg-6">
          <div class="form-group">
            <%= f.label :short_name_cont, I18n.t('spree.transit.abbreviation') %>
            <%= f.text_field :short_name_cont, placeholder: I18n.t('spree.transit.abbreviation'), class: "form-control js-filterable" %>
          </div>
        </div>
      </div>

      <div data-hook="transit_routes_index_search_buttons" class="form-actions">
        <%= button Spree.t(:search), 'search.svg' %>
      </div>
    <% end %>
  </div>
<% end %>