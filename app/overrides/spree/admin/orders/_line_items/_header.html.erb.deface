<!-- replace ".card-header" -->

<div class="card-header d-flex justify-content-between align-items-center">
  <h5 class="card-title mb-0 h6">
    <%= Spree.t(:order_line_items) %>
  </h5>
  <div class="page-actions d-flex justify-content-center flex-wrap">
    <%= order_event_button(@order, :accept_all) if @order.can_accept_all? %>
    <%= order_event_button(@order, :reject_all) if @order.can_reject_all? %>
  </div>
</div>
